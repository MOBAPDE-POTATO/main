<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikogarcia.findit.ViewReportActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item Name:"
        android:id="@+id/tvItemNameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place Lost:"
        android:id="@+id/tvPlaceLostLabel"
        android:textStyle="bold"
        android:layout_below="@+id/tvItemNameLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date Lost:"
        android:id="@+id/tvDateLostLabel"
        android:layout_below="@+id/tvPlaceLostLabel"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descriptions:"
        android:id="@+id/tvFeaturesLabel"
        android:textStyle="bold"
        android:layout_below="@+id/tvDateLostLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feature_scroll"
        android:layout_below="@+id/btnAddDescription"
        android:layout_alignStart="@+id/btnAddDescription">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewReportsFeatureRecycler"
            android:foregroundTintMode="src_over"
            android:layout_below="@+id/tvFeaturesLabel"
            android:layout_alignParentEnd="true" />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possible Matches"
        android:id="@+id/btnPossibleMatches"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/feature_scroll"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="item name"
        android:id="@+id/tvItemName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="place lost"
        android:id="@+id/tvPlaceLost"
        android:layout_above="@+id/tvDateLostLabel"
        android:layout_toEndOf="@+id/tvItemNameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="date lost"
        android:id="@+id/tvDateLost"
        android:layout_above="@+id/tvFeaturesLabel"
        android:layout_toEndOf="@+id/tvPlaceLostLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item Type:"
        android:id="@+id/tvItemTypeLabel"
        android:layout_below="@+id/tvDateLostLabel"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="item type"
        android:id="@+id/tvItemType"
        android:layout_below="@+id/tvDateLost"
        android:layout_alignStart="@+id/tvPlaceLost" />
</RelativeLayout>
