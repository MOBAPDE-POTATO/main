<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddReportActivity"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etItemName"
        android:hint="Item Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPlace"
        android:layout_gravity="center_horizontal"
        android:hint="Place Lost"
        android:layout_below="@+id/etItemName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etDate"
        android:layout_gravity="center_horizontal"
        android:hint="Date Lost"
        android:layout_below="@+id/etPlace"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Description"
        android:id="@+id/btnAddDescription"
        android:layout_below="@+id/etDate"
        android:layout_alignStart="@+id/etDate" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/btnAddDescription"
        android:layout_alignStart="@+id/btnAddDescription">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/featuresRecycler"
            android:foregroundTintMode="src_over"
            android:layout_below="@+id/btnAddDescription"
            android:layout_alignEnd="@+id/btnAddDescription" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:id="@+id/btnReport"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/linearLayout" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnCancel" />
    </LinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnrItemType"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true" />

</RelativeLayout>
